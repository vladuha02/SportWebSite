@model SportWebSite.Domain.Entities.User
@{
    Layout = "_Layout";
}
@using SportWebSite.Domain.Authorization;
<div id="services" class="cards-1 bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Explore our services</h2>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
        <div class="row">
            <div class="col-lg-12">
                <!-- Card -->
                @if (User.IsInRole(Roles.ADMIN))
                {
                    <div class="card">
                        <div class="card-icon">
                            <span class="fas fa-user-circle"></span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Users</h5>
                            <a class="read-more no-line" href="/User/ShowUsers">Details <span class="fas fa-long-arrow-alt-right"></span></a>
                        </div>
                    </div>
                }
                <!-- end of card -->
                <!-- Card -->
                <div class="card">
                    <div class="card-icon">
                        <span class="fas fa-users"></span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Teams</h5>
                        <a class="read-more no-line" href="/Team/ShowTeams">Details <span class="fas fa-long-arrow-alt-right"></span></a>
                    </div>
                </div>
                <!-- end of card -->
                <!-- Card -->
                @if (User.IsInRole(Roles.ADMIN))
                {
                    <div class="card">
                        <div class="card-icon">
                            <span class="fas fa-cogs"></span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Settings</h5>
                            <a class="read-more no-line" href="/Settings">Details <span class="fas fa-long-arrow-alt-right"></span></a>
                        </div>
                    </div>
                }
                <!-- end of card -->
                <!-- Card -->
                @if (User.IsInRole(Roles.ADMIN) || User.IsInRole(Roles.MANAGER))
                {
                    <div class="card">
                        <div class="card-icon">
                            <span class="far fa-address-card"></span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Players</h5>
                            <a class="read-more no-line" href="/Player/AddPlayer">Details <span class="fas fa-long-arrow-alt-right"></span></a>
                        </div>
                    </div>
                }
                <!-- end of card -->
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of services -->