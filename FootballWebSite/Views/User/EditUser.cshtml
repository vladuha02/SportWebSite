@model SportWebSite.ServiceModels.UserServiceModel
@using SportWebSite.Domain.Enums
@{
    Layout = "_Layout";
}
@using SportWebSite.Domain.Authorization;


@if (User.IsInRole(Roles.ADMIN))
{
    <section class="h-100 h-custom gradient-custom-2">
        <form action="http://jsfiddle.net" method="post">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12">
                        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                            <div class="card-body p-0">
                                <div class="row g-0">
                                    <div class="col-lg-6">
                                        <div class="p-5">
                                            <h3 class="fw-normal mb-5" style="color: #4835d4;">General Infomation</h3>
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <div class="row">
                                                <div class="mb-4 pb-2">
                                                    <input type="hidden" asp-for="UserName" value="@Model.UserName" id="form3Examplev2" class="form-control form-control-lg" />
                                                    <div class="form-outline">
                                                        <label class="form-label" asp-for="Email" for="form3Examplev2">Email</label>
                                                        <input type="email" asp-for="Email" value="@Model.Email" id="form3Examplev2" class="form-control form-control-lg" />
                                                    </div>

                                                </div>
                                                <div class="mb-4 pb-2">

                                                    <div class="form-outline">
                                                        <label class="form-label" asp-for="Name" for="form3Examplev3">Full name</label>
                                                        <input type="text" asp-for="Name" value="@Model.Name" id="form3Examplev3" class="form-control form-control-lg" />
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 bg-indigo text-white" style="background: #8435bf;">
                                        <div class="p-5">
                                            <h3 class="fw-normal mb-5">Details</h3>

                                            <div class="mb-4 pb-2">
                                                <div class="form-outline form-white">
                                                    <label class="form-label" asp-for="BirthDate" for="form3Examplea2">Birth Date</label>
                                                    <input type="date" asp-for="BirthDate" value="@Model.BirthDate" id="form3Examplea2" class="form-control form-control-lg" />
                                                </div>
                                            </div>

                                            <div class="mb-4 pb-2">
                                                <div class="form-outline form-white">
                                                    <label class="form-label" asp-for="Location" for="form3Examplea3">Location</label>
                                                    <input type="text" asp-for="Location" value="@Model.Location" id="form3Examplea3" class="form-control form-control-lg" />
                                                </div>
                                            </div>

                                            <div class="mb-4 pb-2">
                                                <div class="form-outline form-white">
                                                    <label class="form-label" asp-for="Gender" for="form3Examplea3">Gender</label>
                                                    @Html.DropDownListFor(m => m.Gender, new SelectList(Enum.GetValues(typeof(Gender))), new { @class = "w-250 form-control" })
                                                </div>
                                            </div>


                                            <div class="mb-4">
                                                <div class="form-outline form-white">
                                                    <label class="form-label" asp-for="Role" for="form3Examplea3">Role</label>
                                                    @Html.DropDownListFor(m => m.Role, new SelectList(Enum.GetValues(typeof(UserRole))), new { @class = "w-250 form-control" })
                                                </div>
                                            </div>

                                            <input type="hidden" name="guid" value="12345u">
                                            <input type="hidden" name="itemID" value="220">
                                            <button type="submit" style="margin-left:27vh; margin-top:5vh;" class="btn btn-light " data-mdb-ripple-color="dark">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
    <script>
        $(document).ready(function () {

            // Modal test confirmation
            $(".btn-modalTest").popConfirm({
                title: "PopConfirm Modal",
                content: "Are you sure?",
                placement: "right",
                container: false
            });

            // Delete confirmation
            $(".btn-lg").popConfirm({
                title: "Delete",
                content: "Delete item?",
                placement: "top"
            });

            // Relist confirmation
            $(".btn-relist").popConfirm({
                title: "Relist",
                content: "Relist item?",
                placement: "top"
            });

        });
    </script>
}
else
{
    <div class="mt-300">
        You don't have any permissions to see this page.
    </div>
}